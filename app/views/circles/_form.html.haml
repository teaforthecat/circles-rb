= form_for @circle do |f|
  - if @circle.errors.any?
    #error_explanation
      %h2= "#{pluralize(@circle.errors.count, "error")} prohibited this circle from being saved:"
      %ul
        - @circle.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :slug
    = f.text_field :slug
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
